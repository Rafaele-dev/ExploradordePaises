<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ExploradordePaises.MainPage"
    Title="Explorador de Países">

    <StackLayout>
        <CollectionView
            ItemsSource="{Binding Paises}"
            SelectionMode="Single"
            SelectionChanged="OnSelectionChanged"
            VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="80,*">
                        <Image Source="{Binding Flags.Png}" WidthRequest="70" HeightRequest="45" Aspect="AspectFill"/>
                        <VerticalStackLayout Grid.Column="1" Padding="10,0">
                            <Label Text="{Binding Name.Common}" FontAttributes="Bold" FontSize="16"/>
                            <Label Text="{Binding CapitalDisplay}" FontSize="14" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
