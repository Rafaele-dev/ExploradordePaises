<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ExploradordePaises.Views.CountryDetailsPage"
    Title="Detalhes do Pais">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="10">
            <Image Source="{Binding Flags.Png}" HeightRequest="160" Aspect="AspectFit"/>
            <Label Text="{Binding Name.Common}" FontSize="22" FontAttributes="Bold"/>
            <Label Text="{Binding Name.Official}" FontSize="16" TextColor="Gray"/>

            <Label Text="Capital:" FontAttributes="Bold"/>
            <Label Text="{Binding CapitalDisplay}"/>

            <Label Text="Regiao:" FontAttributes="Bold"/>
            <Label Text="{Binding Region}"/>

            <Label Text="Moedas:" FontAttributes="Bold"/>
            <Label Text="{Binding CurrencyDisplay}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
    